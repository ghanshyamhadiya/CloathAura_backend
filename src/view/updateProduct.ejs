<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .header h1 {
            color: #2c3e50;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .header p {
            color: #7f8c8d;
            font-size: 1.1rem;
        }

        .back-btn {
            display: inline-block;
            background: linear-gradient(45deg, #95a5a6, #7f8c8d);
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #2c3e50;
            font-weight: 600;
            font-size: 1rem;
        }

        input, select, textarea {
            width: 100%;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: white;
        }

        textarea {
            resize: vertical;
            height: 120px;
        }

        .variants-section {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            margin: 30px 0;
        }

        .variants-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .variants-title {
            color: #2c3e50;
            font-size: 1.3rem;
            font-weight: 700;
        }

        .add-variant-btn {
            background: linear-gradient(45deg, #27ae60, #2ecc71);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .add-variant-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .variant-item {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            position: relative;
        }

        .variant-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .variant-title {
            color: #e74c3c;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .remove-variant-btn {
            background: linear-gradient(45deg, #e74c3c, #c0392b);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .remove-variant-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        .variant-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .sizes-section {
            margin-top: 20px;
        }

        .sizes-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .sizes-title {
            color: #2c3e50;
            font-weight: 600;
        }

        .add-size-btn {
            background: linear-gradient(45deg, #3498db, #2980b9);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .add-size-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        .size-item {
            background: #f1f2f6;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            position: relative;
        }

        .size-row {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr auto;
            gap: 15px;
            align-items: end;
        }

        .remove-size-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            height: 45px;
            transition: all 0.3s ease;
        }

        .remove-size-btn:hover {
            background: #c0392b;
            transform: scale(1.05);
        }

        .current-images {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 10px;
        }

        .current-image {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .current-image img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .submit-section {
            text-align: center;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 2px solid #e0e0e0;
        }

        .submit-btn {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 18px 40px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
        }

        .loading {
            display: none;
            text-align: center;
            color: #667eea;
            font-size: 1.1rem;
            margin-top: 20px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 20px;
                margin: 10px;
            }

            .variant-row, .size-row {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .size-row {
                grid-template-columns: 1fr;
            }

            .remove-size-btn {
                justify-self: start;
                width: 100px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/products" class="back-btn">‚Üê Back to Products</a>
        
        <div class="header">
            <h1>Update Product</h1>
            <p>Modify your product details and variants</p>
        </div>

        <div id="loading-product" class="loading">Loading product details...</div>

        <form id="updateProductForm" style="display: none;" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="category">Category</label>
                <select id="category" name="category" required>
                    <option value="">Select a category</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Home">Home</option>
                    <option value="Books">Books</option>
                </select>
            </div>

            <div class="variants-section">
                <div class="variants-header">
                    <h3 class="variants-title">Product Variants</h3>
                    <button type="button" class="add-variant-btn" onclick="addVariant()">+ Add Variant</button>
                </div>
                <div id="variants-container"></div>
            </div>

            <div class="submit-section">
                <button type="submit" class="submit-btn">Update Product</button>
                <div id="loading" class="loading">Updating product...</div>
            </div>
        </form>
    </div>

    <script>
        const productId = window.location.pathname.split('/').pop();
        let productData = null;

        // Load product data on page load
        loadProduct();

        async function loadProduct() {
            try {
                const response = await fetch(`/api/products/${productId}`);
                if (!response.ok) throw new Error('Product not found');
                
                productData = await response.json();
                populateForm();
                
                document.getElementById('loading-product').style.display = 'none';
                document.getElementById('updateProductForm').style.display = 'block';
            } catch (error) {
                console.error('Error loading product:', error);
                alert('Error loading product details');
            }
        }

        function populateForm() {
            document.getElementById('name').value = productData.name;
            document.getElementById('description').value = productData.description;
            document.getElementById('category').value = productData.category;
            
            // Populate variants
            const container = document.getElementById('variants-container');
            container.innerHTML = '';
            
            productData.variants.forEach((variant, index) => {
                addVariant(variant, index);
            });
        }

        function addVariant(variantData = null, index = null) {
            const container = document.getElementById('variants-container');
            const variantIndex = index !== null ? index : container.children.length;
            
            const variantDiv = document.createElement('div');
            variantDiv.className = 'variant-item';
            variantDiv.innerHTML = `
                <div class="variant-header">
                    <h4 class="variant-title">Variant ${variantIndex + 1}</h4>
                    <button type="button" class="remove-variant-btn" onclick="removeVariant(this)">Remove</button>
                </div>
                
                <div class="variant-row">
                    <div class="form-group">
                        <label>Color</label>
                        <input type="text" name="variants[${variantIndex}][color]" value="${variantData?.color || ''}" required>
                    </div>
                    <div class="form-group">
                        <label>New Images (leave empty to keep current)</label>
                        <input type="file" name="variant_${variantIndex}_images" multiple accept="image/*">
                    </div>
                </div>
                
                ${variantData?.images ? `
                    <div class="form-group">
                        <label>Current Images</label>
                        <div class="current-images">
                            ${variantData.images.map(img => `
                                <div class="current-image">
                                    <img src="${img}" alt="Current image">
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
                
                <div class="sizes-section">
                    <div class="sizes-header">
                        <h5 class="sizes-title">Sizes</h5>
                        <button type="button" class="add-size-btn" onclick="addSize(this, ${variantIndex})">+ Add Size</button>
                    </div>
                    <div class="sizes-container">
                        ${variantData?.sizes ? variantData.sizes.map((size, sizeIndex) => `
                            <div class="size-item">
                                <div class="size-row">
                                    <div>
                                        <label>Size</label>
                                        <input type="text" name="variants[${variantIndex}][sizes][${sizeIndex}][size]" value="${size.size}" required>
                                    </div>
                                    <div>
                                        <label>Price</label>
                                        <input type="number" name="variants[${variantIndex}][sizes][${sizeIndex}][price]" value="${size.price}" step="0.01" min="0" required>
                                    </div>
                                    <div>
                                        <label>Stock</label>
                                        <input type="number" name="variants[${variantIndex}][sizes][${sizeIndex}][stock]" value="${size.stock}" min="0" required>
                                    </div>
                                    <button type="button" class="remove-size-btn" onclick="removeSize(this)">Remove</button>
                                </div>
                            </div>
                        `).join('') : ''}
                    </div>
                </div>
            `;
            
            container.appendChild(variantDiv);
            updateVariantIndices();
        }

        function removeVariant(btn) {
            if (document.querySelectorAll('.variant-item').length <= 1) {
                alert('At least one variant is required');
                return;
            }
            btn.closest('.variant-item').remove();
            updateVariantIndices();
        }

        function addSize(btn, variantIndex) {
            const sizesContainer = btn.parentElement.nextElementSibling;
            const sizeIndex = sizesContainer.children.length;
            
            const sizeDiv = document.createElement('div');
            sizeDiv.className = 'size-item';
            sizeDiv.innerHTML = `
                <div class="size-row">
                    <div>
                        <label>Size</label>
                        <input type="text" name="variants[${variantIndex}][sizes][${sizeIndex}][size]" required>
                    </div>
                    <div>
                        <label>Price</label>
                        <input type="number" name="variants[${variantIndex}][sizes][${sizeIndex}][price]" step="0.01" min="0" required>
                    </div>
                    <div>
                        <label>Stock</label>
                        <input type="number" name="variants[${variantIndex}][sizes][${sizeIndex}][stock]" min="0" required>
                    </div>
                    <button type="button" class="remove-size-btn" onclick="removeSize(this)">Remove</button>
                </div>
            `;
            
            sizesContainer.appendChild(sizeDiv);
        }

        function removeSize(btn) {
            const sizesContainer = btn.closest('.sizes-container');
            if (sizesContainer.children.length <= 1) {
                alert('At least one size is required per variant');
                return;
            }
            btn.closest('.size-item').remove();
            updateSizeIndices(sizesContainer);
        }

        function updateVariantIndices() {
            const variants = document.querySelectorAll('.variant-item');
            variants.forEach((variant, variantIndex) => {
                // Update variant title
                variant.querySelector('.variant-title').textContent = `Variant ${variantIndex + 1}`;
                
                // Update all input names in this variant
                const colorInput = variant.querySelector('input[name*="[color]"]');
                if (colorInput) {
                    colorInput.name = `variants[${variantIndex}][color]`;
                }
                
                const fileInput = variant.querySelector('input[type="file"]');
                if (fileInput) {
                    fileInput.name = `variant_${variantIndex}_images`;
                }
                
                // Update size indices for this variant
                const sizesContainer = variant.querySelector('.sizes-container');
                updateSizeIndices(sizesContainer, variantIndex);
                
                // Update add size button onclick
                const addSizeBtn = variant.querySelector('.add-size-btn');
                if (addSizeBtn) {
                    addSizeBtn.setAttribute('onclick', `addSize(this, ${variantIndex})`);
                }
            });
        }

        function updateSizeIndices(sizesContainer, variantIndex = null) {
            if (variantIndex === null) {
                const variantItem = sizesContainer.closest('.variant-item');
                const allVariants = Array.from(document.querySelectorAll('.variant-item'));
                variantIndex = allVariants.indexOf(variantItem);
            }
            
            const sizeItems = sizesContainer.querySelectorAll('.size-item');
            sizeItems.forEach((sizeItem, sizeIndex) => {
                const inputs = sizeItem.querySelectorAll('input');
                inputs.forEach(input => {
                    if (input.name.includes('[size]')) {
                        input.name = `variants[${variantIndex}][sizes][${sizeIndex}][size]`;
                    } else if (input.name.includes('[price]')) {
                        input.name = `variants[${variantIndex}][sizes][${sizeIndex}][price]`;
                    } else if (input.name.includes('[stock]')) {
                        input.name = `variants[${variantIndex}][sizes][${sizeIndex}][stock]`;
                    }
                });
            });
        }

        document.getElementById('updateProductForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const loadingDiv = document.getElementById('loading');
            const submitBtn = document.querySelector('.submit-btn');
            
            loadingDiv.style.display = 'block';
            submitBtn.disabled = true;
            
            try {
                const formData = new FormData(e.target);
                
                // Process variants data
                const variants = [];
                const variantElements = document.querySelectorAll('.variant-item');
                
                variantElements.forEach((variantEl, index) => {
                    const color = formData.get(`variants[${index}][color]`);
                    const sizes = [];
                    
                    const sizeItems = variantEl.querySelectorAll('.size-item');
                    sizeItems.forEach((sizeEl, sizeIndex) => {
                        const size = formData.get(`variants[${index}][sizes][${sizeIndex}][size]`);
                        const price = formData.get(`variants[${index}][sizes][${sizeIndex}][price]`);
                        const stock = formData.get(`variants[${index}][sizes][${sizeIndex}][stock]`);
                        
                        if (size && price !== null && stock !== null) {
                            sizes.push({
                                size: size,
                                price: parseFloat(price),
                                stock: parseInt(stock)
                            });
                        }
                    });
                    
                    if (color && sizes.length > 0) {
                        variants.push({
                            color: color,
                            sizes: sizes
                        });
                    }
                });
                
                // Create final form data
                const finalFormData = new FormData();
                finalFormData.append('name', formData.get('name'));
                finalFormData.append('description', formData.get('description'));
                finalFormData.append('category', formData.get('category'));
                finalFormData.append('variants', JSON.stringify(variants));
                
                // Add image files
                variantElements.forEach((variantEl, index) => {
                    const fileInput = variantEl.querySelector(`input[name="variant_${index}_images"]`);
                    if (fileInput && fileInput.files.length > 0) {
                        Array.from(fileInput.files).forEach(file => {
                            finalFormData.append(`variant_${index}_images`, file);
                        });
                    }
                });
                
                const response = await fetch(`/api/products/${productId}`, {
                    method: 'PUT',
                    body: finalFormData
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Product updated successfully!');
                    window.location.href = '/products';
                } else {
                    throw new Error(result.message || 'Failed to update product');
                }
            } catch (error) {
                console.error('Error updating product:', error);
                alert('Error updating product: ' + error.message);
            } finally {
                loadingDiv.style.display = 'none';
                submitBtn.disabled = false;
            }
        });
    </script>
</body>
</html>